#!/bin/sh

# Add a ChangeLog entry.
# Usage: add-changelog [PATH...]
# Requires environment variables $NAME and $EMAIL.

cd $(dirname "$0")/.. || exit
DATE=$(date --utc +%Y-%m-%d) || exit
svn status -q "$@" | egrep "\w" || exit
PATHS=$(svn status -q "$@" | sed "s|^.* ||" | egrep -v "test_" | sort)

mv ChangeLog ChangeLog.old
printf "$DATE  $NAME  <$EMAIL>\n\n" > ChangeLog
for path in $PATHS; do
    echo "Adding $path..."
    printf "\t* $path:\n" >> ChangeLog
done
echo >> ChangeLog
cat ChangeLog.old >> ChangeLog
rm ChangeLog.old
