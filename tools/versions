#!/usr/bin/env python

"""Print version numbers of dependencies."""

# pylint: disable-msg=W0404

import sys

print "Python: %d.%d.%d" % sys.version_info[:3]

try:
    print "GTK+:",
    import gtk
    print "%d.%d.%d" % gtk.gtk_version
except ImportError:
    print "N/A"

try:
    print "PyGTK:",
    import gtk
    print "%d.%d.%d" % gtk.pygtk_version
except ImportError:
    print "N/A"

try:
    print "PyEnchant:",
    import enchant
    print enchant.__version__
except Exception:
    print "N/A"

try:
    print "Universal Encoding Detector:",
    import chardet
    print chardet.__version__
except ImportError:
    print "N/A"
