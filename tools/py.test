#!/usr/bin/env python

"""
Run py.test.

USAGE: py.test [OPTIONS] [QUERY] [FILENAMES OF TESTS]
"""

import os
import sys
import tempfile

test_dir = os.path.dirname(os.path.abspath(__file__))
lib_dir  = os.path.join(test_dir, '..', 'lib')
os.environ['PYTHONPATH'] = lib_dir + ':' + os.environ['PYTHONPATH']

os.system('py.test %s' % ' '.join(sys.argv[1:]))

