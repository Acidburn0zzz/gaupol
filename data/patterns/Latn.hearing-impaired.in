[HearingImpairedPattern]
_Name=Sounds in brackets
_Description=Remove descriptions of sounds between square brackets
Pattern=\[.*?\]
Flags=DOTALL,MULTILINE,UNICODE
Replacement=

[HearingImpairedPattern]
_Name=Sounds in parantheses
_Description=Remove descriptions of sounds between parantheses
Pattern=\(.*?\)
Flags=DOTALL,MULTILINE,UNICODE
Replacement=

[HearingImpairedPattern]
_Name=Speakers
_Description=Replace names of speakers with dialog lines
Pattern=^-?\s?[^,;:\.\?\!]*?:\s
Flags=MULTILINE,UNICODE
Replacement=-\040

[HearingImpairedPattern]
_Name=Song lyrics
_Description=Remove song lyrics between number signs
Pattern=#[^#]*(#|\Z)
Flags=DOTALL,MULTILINE,UNICODE
Replacement=

[HearingImpairedPattern]
_Name=One-line song lyrics
_Description=Remove one-line song lyrics between number signs
Pattern=#[^#\n]*(#|$)
Flags=DOTALL,MULTILINE,UNICODE
Replacement=
