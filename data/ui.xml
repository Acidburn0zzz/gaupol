<ui>
  <menubar name="menubar">
    <menu name="file" action="show_file_menu">
      <menuitem name="new" action="new_project"/>
      <menuitem name="open_main" action="open_main_files"/>
      <menuitem name="open_translation" action="open_translation_file"/>
      <menuitem name="select_video" action="select_video_file"/>
      <separator/>
      <menu name="recent_main" action="show_recent_main_menu">
        <menuitem name="new" action="new_project"/>
      </menu>
      <menu name="recent_translation" action="show_recent_translation_menu">
        <menuitem name="new" action="new_project"/>
      </menu>
      <separator/>
      <menuitem name="save_main" action="save_main_document"/>
      <menuitem name="save_main_as" action="save_main_document_as"/>
      <menuitem name="save_translation" action="save_translation_document"/>
      <menuitem name="save_translation_as" action="save_translation_document_as"/>
      <separator/>
      <menuitem name="headers" action="edit_headers"/>
      <separator/>
      <menuitem name="close" action="close_project"/>
      <menuitem name="quit" action="quit"/>
    </menu>
    <menu name="edit" action="show_edit_menu">
      <menuitem name="undo" action="undo_action"/>
      <menuitem name="redo" action="redo_action"/>
      <separator/>
      <menuitem name="value" action="edit_value"/>
      <menuitem name="next_value" action="edit_next_value"/>
      <separator/>
      <menuitem name="split" action="split_subtitle"/>
      <menuitem name="merge" action="merge_subtitles"/>
      <separator/>
      <menuitem name="insert" action="insert_subtitles"/>
      <menuitem name="remove" action="remove_subtitles"/>
      <separator/>
      <menuitem name="select_all" action="select_all"/>
      <menuitem name="invert_selection" action="invert_selection"/>
      <separator/>
      <menuitem name="preferences" action="edit_preferences"/>
    </menu>
    <menu name="view" action="show_view_menu">
      <menuitem name="main_toolbar" action="toggle_main_toolbar"/>
      <menuitem name="video_toolbar" action="toggle_video_toolbar"/>
      <menuitem name="statusbar" action="toggle_statusbar"/>
      <menuitem name="output_window" action="toggle_output_window"/>
      <separator/>
      <menuitem name="times" action="show_times"/>
      <menuitem name="frames" action="show_frames"/>
      <separator/>
      <menu name="framerate" action="show_framerate_menu">
        <menuitem name="24" action="show_framerate_24"/>
        <menuitem name="25" action="show_framerate_25"/>
        <menuitem name="30" action="show_framerate_30"/>
      </menu>
      <menu name="columns" action="show_columns_menu">
        <menuitem name="number" action="toggle_number_column"/>
        <menuitem name="start" action="toggle_start_column"/>
        <menuitem name="end" action="toggle_end_column"/>
        <menuitem name="duration" action="toggle_duration_column"/>
        <menuitem name="main_text" action="toggle_main_text_column"/>
        <menuitem name="translation_text" action="toggle_translation_text_column"/>
      </menu>
    </menu>
    <menu name="text" action="show_text_menu">
      <menuitem name="cut" action="cut_texts"/>
      <menuitem name="copy" action="copy_texts"/>
      <menuitem name="paste" action="paste_texts"/>
      <menuitem name="clear" action="clear_texts"/>
      <separator/>
      <menuitem name="find_and_replace" action="find_and_replace"/>
      <menuitem name="find_next" action="find_next"/>
      <menuitem name="find_previous" action="find_previous"/>
      <separator/>
      <menuitem name="italic" action="toggle_italicization"/>
      <menuitem name="dialogue" action="toggle_dialogue_lines"/>
      <menu name="case" action="show_case_menu">
        <menuitem name="title" action="use_title_case"/>
        <menuitem name="sentence" action="use_sentence_case"/>
        <menuitem name="upper" action="use_upper_case"/>
        <menuitem name="lower" action="use_lower_case"/>
      </menu>
    </menu>
    <menu name="tools" action="show_tools_menu">
      <menuitem name="preview" action="preview"/>
      <separator/>
      <menuitem name="check_spelling" action="check_spelling"/>
      <menuitem name="configure_spell_check" action="configure_spell_check"/>
      <menuitem name="correct_texts" action="correct_texts"/>
      <separator/>
      <menuitem name="shift_positions" action="shift_positions"/>
      <menuitem name="transform_positions" action="transform_positions"/>
      <menuitem name="adjust_durations" action="adjust_durations"/>
      <menuitem name="convert_framerate" action="convert_framerate"/>
      <separator/>
      <menuitem name="append_file" action="append_file"/>
      <menuitem name="split_project" action="split_project"/>
    </menu>
    <menu name="projects" action="show_projects_menu">
      <menuitem name="save_all" action="save_all_documents"/>
      <menuitem name="close_all" action="close_all_projects"/>
      <separator/>
      <menuitem name="previous" action="activate_previous_project"/>
      <menuitem name="next" action="activate_next_project"/>
      <separator/>
      <menuitem name="move_tab_left" action="move_tab_left"/>
      <menuitem name="move_tab_right" action="move_tab_right"/>
      <separator/>
      <placeholder name="open">
      </placeholder>
    </menu>
    <menu name="help" action="show_help_menu">
      <menuitem name="report_a_bug" action="report_a_bug"/>
      <menuitem name="about" action="view_about_dialog"/>
    </menu>
  </menubar>
  <toolbar name="main_toolbar">
    <toolitem name="open_main" action="open_main_files"/>
    <toolitem name="save_main" action="save_main_document"/>
    <separator/>
    <toolitem name="undo" action="undo_action"/>
    <toolitem name="redo" action="redo_action"/>
    <separator/>
    <toolitem name="insert" action="insert_subtitles"/>
    <toolitem name="remove" action="remove_subtitles"/>
    <separator/>
    <toolitem name="preview" action="preview"/>
  </toolbar>
  <popup name="tab_popup">
    <menuitem name="move_tab_left" action="move_tab_left"/>
    <menuitem name="move_tab_right" action="move_tab_right"/>
    <separator/>
    <menuitem name="close" action="close_project"/>
  </popup>
  <popup name="view_popup">
    <menuitem name="split" action="split_subtitle"/>
    <menuitem name="merge" action="merge_subtitles"/>
    <separator/>
    <menuitem name="insert" action="insert_subtitles"/>
    <menuitem name="remove" action="remove_subtitles"/>
    <separator/>
    <menuitem name="preview" action="preview"/>
  </popup>
  <popup name="view_header_popup">
    <menuitem name="number" action="toggle_number_column"/>
    <menuitem name="start" action="toggle_start_column"/>
    <menuitem name="end" action="toggle_end_column"/>
    <menuitem name="duration" action="toggle_duration_column"/>
    <menuitem name="main_text" action="toggle_main_text_column"/>
    <menuitem name="translation_text" action="toggle_translation_text_column"/>
  </popup>
</ui>
