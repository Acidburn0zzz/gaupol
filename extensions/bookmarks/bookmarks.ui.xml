<ui>
  <menubar name="menubar">
    <menu name="view" action="show_view_menu">
      <menu name="columns" action="show_columns_menu">
        <placeholder name="0">
          <menuitem name="bookmark" action="toggle_bookmark_column"/>
        </placeholder>
      </menu>
    </menu>
    <placeholder name="1">
      <menu name="bookmarks" action="show_bookmarks_menu">
        <menuitem name="add" action="add_bookmark"/>
        <menuitem name="edit" action="edit_bookmarks"/>
        <separator/>
        <menuitem name="next" action="next_bookmark"/>
        <menuitem name="previous" action="previous_bookmark"/>
      </menu>
    </placeholder>
  </menubar>
  <popup name="view_header_popup">
    <placeholder name="0">
      <menuitem name="bookmark" action="toggle_bookmark_column"/>
    </placeholder>
  </popup>
</ui>
