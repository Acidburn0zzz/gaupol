[Common Error Pattern]
_Name=Letter "I" in a lower case word
_Description=Replace letter "I" with letter "l" in a lower case word
Classes=OCR;
Pattern=(?<=[a-z])I
Flags=DOTALL;MULTILINE;UNICODE;
Replacement=l
Repeat=True

