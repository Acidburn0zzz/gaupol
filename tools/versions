#!/usr/bin/env python

"""Print version numbers of dependencies."""

# pylint: disable=W0404

import sys

print("Libraries:")
print("Python: %d.%d.%d" % sys.version_info[:3])

try:
    print("GTK+:", end=' ')
    from gi.repository import Gtk
    print("%d.%d.%d" % Gtk.gtk_version)
except ImportError:
    print(None)

try:
    print("GStreamer:", end=' ')
    import gst
    print(".".join(map(str, gst.version())))
except ImportError:
    print(None)

print("Python Packages:")

try:
    print("aeidon:", end=' ')
    import aeidon
    print(aeidon.__version__)
except ImportError:
    print(None)

try:
    print("gaupol:", end=' ')
    import gaupol
    print(gaupol.__version__)
except ImportError:
    print(None)

try:
    print("gtk:", end=' ')
    from gi.repository import Gtk
    print("%d.%d.%d" % Gtk.pygtk_version)
except ImportError:
    print(None)

try:
    print("gst:", end=' ')
    import gst
    print(".".join(map(str, gst.pygst_version)))
except ImportError:
    print(None)

try:
    print("enchant:", end=' ')
    import enchant
    print(enchant.__version__)
except Exception:
    print(None)

try:
    print("chardet:", end=' ')
    import chardet
    print(chardet.__version__)
except ImportError:
    print(None)
